<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    tools:context="com.example.rathore.creditcardapp.MainActivity">

    <LinearLayout

        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="#171717"
        >

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:layout_weight="1"
                android:textColor="#606060"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:text="Enter Card Balance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:background="#dfdfdf"
                android:textColor="#000000"
                android:id="@+id/editText"
                android:layout_width="172dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:layout_weight="0.11" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:layout_weight="1"
                android:textColor="#606060"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:text="Enter Yearly Interest Rate(%)"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:background="#dfdfdf"
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/editText2"
                android:layout_width="0px"
                android:layout_height="50dp"

                android:ems="10"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="#606060"
                android:id="@+id/textView"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Enter Minimum Payment($)" />

            <EditText
                android:background="#dfdfdf"
                android:id="@+id/editText3"
                android:textColor="#000000"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:textColor="#606060"
                android:id="@+id/textView2"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Enter Months Remaining" />

            <EditText
                android:background="#dfdfdf"
                android:id="@+id/editText5"
                android:textColor="#000000"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:textColor="#606060"
                android:id="@+id/textView2"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Interest Paid Will be" />

            <EditText
                android:background="#dfdfdf"
                android:id="@+id/editText5"
                android:textColor="#000000"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />


        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Compute" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
